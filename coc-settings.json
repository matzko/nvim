{
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "git.enableGutters": true,
  "git.addedSign.text": ":sparkles:",
  "git.addedSign.hlGroup": "LineNr",
  "git.removedSign.text": ":eight_pointed_black_star:",
  "git.removedSign.hlGroup": "LineNr",
  "git.changedSign.text": ":black_nib:",
  "git.changedSign.hlGroup": "LineNr",
  "git.changeRemovedSign.text": ":boom:",
  "git.changeRemovedSign.hlGroup": "LineNr",
  "git.topRemovedSign.text": ":eight_pointed_black_star:",
  "git.topRemovedSign.hlGroup": "LineNr",
  "solargraph.useBundler": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,
  "eslint.filetypes": ["vue", "svelte", "javascript", "jsx", "typescript"],
  "eslint.autoFixOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": ["css", "javascript", "elm", "markdown"],
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "save"
      }
    },
    "haskell": {
  "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "codeLens.enable": true
}
